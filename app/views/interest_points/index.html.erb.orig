<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading clearfix">
                    <span><b>All Interest Points</b></span>
                    <% if can? :create, InterestPoint %>
                    <div class="btn-group pull-right">
                        <button type="button" class="btn-xs btn-info">
                            <span class="glyphicon glyphicon-plus"></span>
                            <%= link_to 'New Interest Point', new_interest_point_path %>
                        </button>
                    </div>
                    <% end %>
                </div>
                <table class="table">
                    <thead>
                        <tr class="active">
                            <th><b>Name</b></th>
                            <th><b>Type</b></th>
                            <th><b>Location</b></th>
                            <th><b>Status</b></th>
                            <th><b>Actions</b></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @interest_points.each do |interest_point| %>
                        <tr class="info">
                            <td><%= interest_point.name %></td>
                            <td><%= interest_point.category.name %></td>
                            <td><%= interest_point.full_address %></td>
                            <td><%= interest_point.approver_id.nil? ? 'Pending' : 'Active' %></td>
                            <td>
                               <% if can? :read, interest_point %><%= link_to 'Show', interest_point, 'data-no-turbolink' => true %><% end %>  
                               <% if can? :update, interest_point %><%= link_to 'Edit', edit_interest_point_path(interest_point) %><% end %>  
                               <% if can? :delete, interest_point %><%= link_to 'Delete', interest_point_path(interest_point), method: :delete, data: {confirm: "Are you sure you want to delete this Interest Point?" } %><% end %>
                           </td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%= render "shared/test_footer" %>