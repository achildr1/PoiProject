<%= form_for @role, class: 'form form-horizontal' do |f| %>  
  <div class='row'>
  	<div class='col-xs-6'>
    	<%= f.label :name %>
    	<%= f.text_field :name, class: 'form-control' %>
    </div>    	
  </div>
  <div class="row">
	<div class="col-xs-6 pull-right">
		<%= link_to 'Cancel', roles_path, class: "btn btn-danger" %>
		<%= f.submit "Save Role", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
