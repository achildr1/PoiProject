<div class="panel panel-info">
    <div class="panel-heading clearfix">
      <span>
        <b style="font-size: 24px;">All User Roles</b>
      </span>
      <% if can? :create, @role %>
        <div class="btn-group pull-right">
          <%= default_create_button('Create New Role', new_role_path) %>
        </div>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr class="active">
      	    <th><b>ID</b></th>
            <th><b>Name</b></th>
            <th></th>
            <th></th>
        <th></th>
        </tr>
      </thead>
    <% @roles.each do |role| %>
    <tr class="info">
        <td><%= role.id %></td>
        <td><%= role.name %></td>
        <td><% if can? :read, role %><%= link_to 'Show', role, 'data-no-turbolink' => true %><% end %></td>
        <td><% if can? :edit, role %><%= link_to 'Edit', edit_role_path(role) %><% end %></td>
        <td><% if can? :delete, role %><%= link_to 'Delete', role_path(role), method: :delete, data: {confirm: "Are you sure you want to delete this Role?" } %><% end %></td>
    </tr>
    <% end %>
    </table>
</div>