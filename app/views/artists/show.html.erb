<div class="panel panel-info">
  <div class="panel-heading clearfix">
    <b style="font-size: 24px;">Interest Points by <%= @artist.first_name %>&nbsp;<%= @artist.last_name %></b>
  </div>
  <% @artist_interest_points.each do |interest_point| %>
      <% if can? :read, interest_point %>
      <div class="row">
        <div class="col-xs-12">
        <p style="text-align: center; font-weight: bold"><%= link_to interest_point.name, interest_point %></p>
        <p>
        <%= link_to interest_point, 'data-no-turbolink' => true do %>
            <%= image_tag interest_point.images.first.file, :class => "image-thumbnail" %>
        <% end %>
        </p>
        </div>
      </div>
      <% end %>
  <% end %>
  <div class="row">
    <div class="col-xs-3 pull-right">
        <% if can? :edit, @artist %><%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-success btn-sm' %><% end %>
        <% if can? :delete, @artist %><%= link_to 'Delete', artist_path(@artist), method: :delete, data: {confirm: 'Are you sure you want to delete this artist?' }, class: 'btn btn-danger btn-sm' %><% end %>
        <%= link_to 'Cancel', artists_path, class: 'btn btn-default btn-sm' %>
    </div>
  </div>
  
<div class="row">
  <div class="col-xs-12">
  <!-- AddThis Button BEGIN -->
  <div class="addthis_toolbox addthis_default_style addthis_16x16_style">
    <a class="addthis_button_facebook"></a>
    <a class="addthis_button_twitter"></a>
    <a class="addthis_button_google_plusone_share"></a>
    <a class="addthis_button_reddit"></a>
    <a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a>
  </div>
  <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5316251b0fc4579f"></script>
  <!-- AddThis Button END -->
  </div>
</div>
</div>




