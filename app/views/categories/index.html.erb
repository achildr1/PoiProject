
	<div class='panel panel-info'>
		<div class='panel-heading clearfix'>
			<span>
				<b style="font-size: 24px;">All Categories</b>
			</span>
			<% if can? :create, @category %>
		        <div class="btn-group pull-right">
		            <%= default_create_button( 'Create New Category', new_category_path) %>
		        </div>
			<% end %>
		</div>
	
	<table class='table'>
		<tr class='active'>
			<th><b>ID</b></th>
			<th><b>Name</b></th>
			<th><b>Number of Interest Points</b></th>
			<th></th>
		</tr>
		<% @categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><%= link_to category.name, category, 'data-no-turbolink' => true %></td>
				<td><%= category.interest_points.active.count %>
	        <td><% if can? :edit, category %><%= link_to 'Edit', edit_category_path(category) %><% end %>
	           <% if can? :delete, category %><%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure you want to delete this Category?" } %><% end %>
	        </td>
    		</tr>
		<% end %>
	</table>
	</div>