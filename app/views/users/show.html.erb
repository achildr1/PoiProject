<div class='container-fluid'>
	<h2>User Details</h2>	
	<div class='row'>	
		<div class='col-xs-4 col-md-6'>
			<p><strong>User:</strong> <%= @user.user_name %></p>
		</div>
	</div>
	
	<div class='row'>	
		<div class='col-xs-4 col-md-6'>
			<p><strong>Name:</strong> <%= @user.first_name %> <%= @user.last_name %></p>
		</div>
	</div>
	<div class='row'>
		<div class='col-xs-4 col-md-6'>
			<p><strong>Email: </strong> <%= mail_to(@user.email) do %><%= @user.email %><% end %></p>
		</div>
	</div>	
	<div class='row'>
		<div class='col-xs-4 col-md-6'>
			<p><strong>Role: </strong> <%= @user.role.name %></p>
		</div>
	</div>	
	<div class='row'>
		<div class='col-xs-2 col-md-3'>
			<p><strong>Created On: </strong> <%= @user.created_at %></p>
		</div>
	</div>
	<div class='row'>
		<div class='col-xs-2 col-md-3'>
			<p><strong>Last Modified On: </strong> <%= @user.updated_at %></p>
		</div>
	</div>
	
	<div class='row'>
		<div class='col-xs-4 col-md-6'>
			<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-success' %>
			<%= link_to 'Delete Account', user_path(@user), :method => :delete, :data => { confirm: 'Are you sure you want to delete this user?'}, class: 'btn btn-danger' %>
			<%= link_to 'Back', users_path, class: 'btn btn-primary' %>
		</div>
	</div>
</div>