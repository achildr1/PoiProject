<h1>Reset Password</h1>
	
<p>Please enter your email address below and then press "Reset Password".</p>
	
<div class='row'>
	<%= form_tag reset_passwords_path, method: :post do %>
	<div class='col-xs-3'>
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email], class: 'form-control' %>
	</div>
</div>
<div class='row'>
	<div class='col-xs-3'>
	  <%= submit_tag "Send me email", class: 'btn btn-primary btn-sm pull-right', method: :post %>
	</div>
	<% end %>
</div>
</div>
